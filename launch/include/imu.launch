<launch>
    <arg name="use_imu_data" default="true" />
    <arg name="_port" default="usb-Silicon_Labs_CP2104_USB_to_UART_Bridge_Controller_00EB7263-if00-port0" />
    <node pkg="tf" type="static_transform_publisher" name="imu2base_link" args="-0.095 0 0.66762 0 0 0 base_link imu 100" />

    <group if="$(arg use_imu_data)">
        <node pkg="um7" type="um7_driver" name="um7_driver">
            <param name="_port" value="$(arg _port)" />
        </node>
    </group>
</launch>